<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="선택"
            android:textSize="18sp"
            android:textColor="#111111"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/v_dialog_divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d8d8d8"
            app:layout_constraintTop_toBottomOf="@+id/tv_dialog_title"/>

        <TextView
            android:id="@+id/tv_dialog_menu_one"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="카메"
            android:textSize="14sp"
            android:textColor="#111111"
            android:onClick="onCamera"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_dialog_divider1" />

        <View
            android:id="@+id/v_dialog_divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d8d8d8"
            app:layout_constraintTop_toBottomOf="@+id/tv_dialog_menu_one"/>

        <TextView
            android:id="@+id/tv_dialog_menu_two"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="갤러리"
            android:textSize="14sp"
            android:textColor="#111111"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_dialog_divider2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>